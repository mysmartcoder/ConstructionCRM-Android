<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_15"
        android:src="@drawable/icon_snagging" />
    
    <TextView
        android:id="@+id/fragment_snagging__textview_datanotfound"
        style="@style/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/alt_data_not_found"
        android:textColor="@color/gray_2"
        android:visibility="gone" />

    <ListView
        android:id="@+id/fragment_snagging_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_action_bar"
        android:visibility="visible"
        android:dividerHeight="@dimen/dimen_0_5" >
    </ListView>

</LinearLayout>
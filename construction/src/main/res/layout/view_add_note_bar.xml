<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_add_note_linear_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/ready_task_txt_bg"
    android:gravity="center_vertical"
    android:padding="@dimen/dimen_5" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/view_add_note_imageview_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/icon_camera" />

        <EditText
            android:id="@+id/view_add_note_edittex_text"
            style="@style/edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_add_note_imageview_send"
            android:layout_toRightOf="@+id/view_add_note_imageview_camera"
            android:background="@null"
            android:hint="@string/hint_type_here"
            android:maxLines="3"
            android:padding="@dimen/dimen_5"
            android:inputType="textMultiLine"
            android:singleLine="false" />

        <ImageView
            android:id="@+id/view_add_note_imageview_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/icon_chet_post" />
    </RelativeLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_line_chart_report_linear_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_15"
            android:src="@drawable/icon_reports"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fragment_sub_reports_textview_task_name"
            style="@style/textview_sub_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lbl_report_line_chart"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/fragment_make_ready_task_h_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/bg_bottom_tab_bar" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/fragment_make_ready_task_textview_material"
                    style="@style/textview_small"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_bottom_tab_bar"
                    android:drawableBottom="@drawable/btn_redio_on"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_week1"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_make_ready_task_textview_equipment"
                    style="@style/textview_small"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_bottom_tab_bar"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_week2"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_make_ready_task_textview_workers"
                    style="@style/textview_small"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_bottom_tab_bar"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_week3"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_make_ready_task_textview_space"
                    style="@style/textview_small"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_bottom_tab_bar"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_week4"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_make_ready_task_textview_design"
                    style="@style/textview_small"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_bottom_tab_bar"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_week5"
                    android:textColor="@color/white" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="@dimen/dimen_5" >

            <view
                android:id="@+id/line_view_vertical"
                android:layout_width="20dp"
                android:layout_height="200dp"
                class="com.construction.android.view.LineVeriticalView" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:background="@color/black" >

                <view
                    android:id="@+id/line_view"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    class="com.construction.android.view.LineView" />
            </HorizontalScrollView>
        </LinearLayout>

        <!-- <LinearLayout -->
        <!-- android:id="@+id/fragment_line_chart_report_linear_actor" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:orientation="vertical" -->
        <!-- android:padding="@dimen/dimen_10" > -->
        <!-- </LinearLayout> -->

        <GridView
            android:id="@+id/fragment_line_chart_report_linear_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10" >
        </GridView>
    </LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menulayout_relative_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1"
        android:background="@color/bg_bottom_tab_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_notifications_textview_all"
            style="@style/textview_sub_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_5"
            android:text="@string/lbl_all"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/fragment_notifications_textview_unread"
            style="@style/textview_sub_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_5"
            android:text="@string/lbl_unread"
            android:background="@color/bg_action_bar"
            android:textColor="@color/bg_bottom_tab_bar" />

        <View
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/fragment_notifications_textview_archived"
            style="@style/textview_sub_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/dimen_5"
            android:text="@string/lbl_archived"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_15"
        android:src="@drawable/icon_notifications" />

<!--     <View -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="@dimen/dimen_0_5" -->
<!--         android:background="@color/bg_action_bar" /> -->

    <ListView
        android:id="@+id/fragment_notifications_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/faq_array_answer" >
    </ListView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:id="@+id/fragment_snagging_task_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_make_ready_task_searchbar"
        android:paddingBottom="@dimen/dimen_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fragment_snagging_task_details_imagview_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/icon_snagging"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dimen_15"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_task_name"
                style="@style/textview_sub_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_task_place"
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/bg_action_bar" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_task_date"
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/bg_bottom_tab_bar"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_snagging_task_details_textview_complete"
                    style="@style/textview_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_button_selector"
                    android:drawablePadding="@dimen/dimen_2"
                    android:drawableTop="@drawable/icon_complete"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_complete"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_snagging_task_details_textview_rework"
                    style="@style/textview_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_button_selector"
                    android:drawablePadding="@dimen/dimen_2"
                    android:drawableTop="@drawable/icon_mark_for_rework"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_mark_for_rework"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_description"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/ready_task_txt_bg"
                android:drawableRight="@drawable/icon_list_arrow"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_description" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_description_value"
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5"
                android:singleLine="false"
                android:textColor="@color/bg_bottom_tab_bar"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5"
                android:background="@color/ready_task_txt_bg" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_predescessor"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableRight="@drawable/icon_list_arrow"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_predescessors" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_predescessor_not_found"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_5"
                android:singleLine="false"
                android:text="@string/alt_predescessors_data_not_founds"
                android:textColor="@color/bg_bottom_tab_bar"
                android:visibility="gone" />

            <ListView
                android:id="@+id/fragment_snagging_task_details_listview_predescessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_files"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ready_task_txt_bg"
                android:drawableRight="@drawable/icon_list_arrow"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_files" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_file_not_found"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_5"
                android:singleLine="false"
                android:text="@string/alt_files_data_not_founds"
                android:textColor="@color/bg_bottom_tab_bar"
                android:visibility="gone" />

            <ListView
                android:id="@+id/fragment_snagging_task_details_listview_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5"
                android:background="@color/ready_task_txt_bg" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_notes"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableRight="@drawable/icon_list_arrow"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_notes" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_notes_not_found"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_5"
                android:singleLine="false"
                android:text="@string/alt_notes_data_not_founds"
                android:textColor="@color/bg_bottom_tab_bar"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/fragment_snagging_task_details_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/fragment_snagging_task_details_linear_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible" />

                <ListView
                    android:id="@+id/fragment_task_card_listview_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent" />

                <TextView
                    android:id="@+id/fragment_snagging_task_details_imageview_more"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fragment_snagging_task_details_linear_notes"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@drawable/icon_more"
                    android:gravity="right"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_more" />
            </RelativeLayout>

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_history"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ready_task_txt_bg"
                android:drawableRight="@drawable/icon_list_arrow"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_history" />

            <TextView
                android:id="@+id/fragment_snagging_task_details_textview_history_not_found"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_5"
                android:singleLine="false"
                android:text="@string/alt_history_data_not_founds"
                android:textColor="@color/bg_bottom_tab_bar"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fragment_snagging_task_details_linear_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <ListView
                android:id="@+id/fragment_snagging_task_details_listview_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/fragment_make_ready_task_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/view_add_note_bar" />

</RelativeLayout><!-- From: file:/D:/Workspace/construction-mobile.android-app/construction/src/main/res/layout/fragment_snagging_task_details.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10" >

        <ImageView
            android:id="@+id/activity_login_imageview_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_50"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_login_screen_logo" />

        <EditText
            android:id="@+id/activity_login_edittex_email"
            style="@style/edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_username"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/login_text_color" />

        <EditText
            android:id="@+id/activity_login_edittex_password"
            style="@style/edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColorHint="@color/login_text_color" />

        <TextView
            android:id="@+id/activity_login_button_login"
            style="@style/button_normal_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="@string/lbl_login"
            android:typeface="serif" />

        <TextView
            android:id="@+id/activity_login_textview_forgot_password"
            style="@style/textview_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:gravity="center"
            android:text="@string/lbl_forgot_password" />
    </LinearLayout>

</ScrollView><!-- From: file:/D:/Workspace/construction-mobile.android-app/construction/src/main/res/layout/activity_login.xml -->
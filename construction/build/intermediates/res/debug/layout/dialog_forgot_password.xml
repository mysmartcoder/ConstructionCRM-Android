<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:padding="@dimen/dimen_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/bg_white_rounded_with_border"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_20" >

        <TextView
            style="@style/textview_sub_title_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dimen_150"
            android:text="@string/lbl_forgot_password" />

        <EditText
            android:id="@+id/dialog_username_editText_usrename"
            style="@style/edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:hint="@string/hint_username"
            android:textColorHint="@color/login_text_color"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/dialog_username_textview_send"
            style="@style/button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:minWidth="@dimen/dimen_150"
            android:text="@string/lbl_send" />
    </LinearLayout>


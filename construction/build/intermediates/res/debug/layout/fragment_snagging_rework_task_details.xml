<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:id="@+id/fragment_snagging_task_rework_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_snagging_task_rework_textview_rework_searchbar"
        android:paddingBottom="@dimen/dimen_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fragment_snagging_task_rework_imageview_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/icon_snagging"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dimen_15"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/fragment_snagging_task_rework_textview_task_name"
                style="@style/textview_sub_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/fragment_snagging_task_rework_textview_task_place"
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/bg_action_bar" />

            <TextView
                android:id="@+id/fragment_snagging_task_rework_textview_task_date"
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/red" />

            <TextView
                style="@style/textview_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/bg_bottom_tab_bar"
                android:drawablePadding="@dimen/dimen_2"
                android:drawableTop="@drawable/icon_mark_for_rework"
                android:gravity="center"
                android:padding="@dimen/dimen_5"
                android:text="@string/lbl_mark_for_rework"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/bg_bottom_tab_bar"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_snagging_task_rework_textview_incomplete"
                    style="@style/textview_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_button_selector"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_incomplete"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_snagging_task_rework_textview_defactive"
                    style="@style/textview_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_button_selector"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_defective"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/dimen_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/fragment_snagging_task_rework_textview_inspection"
                    style="@style/textview_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_button_selector"
                    android:drawableBottom="@drawable/btn_redio_off"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_need_further_insepection"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_snagging_task_rework_textview_note"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5"
                android:text="@string/lbl_type_note_and_take_photo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5"
                android:background="@color/bg_bottom_tab_bar" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/fragment_snagging_task_rework_textview_rework_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/view_add_note_bar" />

</RelativeLayout><!-- From: file:/D:/Workspace/construction-mobile.android-app/construction/src/main/res/layout/fragment_snagging_rework_task_details.xml -->
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_5"
        android:src="@drawable/icon_make_ready_tasks" />
    
    <TextView
        android:id="@+id/fragment_make_ready_task_textview_datanotfound"
        style="@style/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/alt_data_not_found"
        android:textColor="@color/gray_2"
        android:visibility="gone" />

    <ListView
        android:id="@+id/fragment_make_ready_task_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:divider="@color/white"
        android:dividerHeight="@dimen/dimen_1" />

